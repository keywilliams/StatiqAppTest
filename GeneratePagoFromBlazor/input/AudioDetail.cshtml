@model AudioDetailModel
@Html.Partial("Shared/DetailHeader.cshtml", Model)

<section class="item-details">

    <div class="item-details__info">
        <div class="mb-4">
            <h6>@Model.Resources.TextOverview</h6>
            <p>@Model.Description</p>
        </div>

    </div>

</section>

<section class="audio-track bg-dark py-5 mb-5">
    <div class="item-details content-dark ">
        <h6>@Model.Resources.TextTrackList</h6>

        <div class="content-table">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">@Model.Resources.TextTitle</th>
                        <th scope="col">
                            <svg class="all fill-accent">
                                <use xlink:href="all.svg#icon-clock"></use>
                            </svg>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var track in Model.TrackList)
                        {
                            <tr>
                                <td>@track.Id</td>
                                <td>@track.Description</td>
                                <td>@track.Duration</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>

<div class="item-details content-light mb-4">
    <h6>@Model.Resources.TextRelated</h6>
    <div class="row row-cols-lg-5 ">
        @{
            foreach (var relate in Model.Related)
            {
                <div class="col col-4">

                    <a href="@{@relate.HtmlName}.html">
                        <div class="search-results__item audio-item">
                            <img src="@relate.Image" />
                            <div class="search-results__item-type">
                                <svg class="all fill-white">
                                    <use xlink:href="../wwwroot/all.svg#icon-audio"></use>
                                </svg>
                            </div>
                        </div>

                    </a>

                    <p class="search-results__item-title mb-0 mt-3">@relate.Name<span></span></p>
                    <p class="search-results__item-info"><span>@relate.Year</span> | <span>@relate.Duration</span></p>

                </div>
            }
        }
    </div>
</div>

<section class="item-all bg-dark py-5 my-5">
    <div class="item-all__content">
        <h6>@Model.Resources.TextAllAudio</h6>

        <div class="detail-slider mt-3">
            <div class="slider all-items detail-slider__all-items audio-item">
                @{
                    foreach (var audio in Model.AllAudios)
                    {
                        <div>
                            <a href="@{@audio.HtmlName}.html">
                                <img src="@audio.Image" />
                            </a>
                            <p class="item-title mb-0 mt-2">@audio.Name</p>
                            <p class="item-info"><small><span>@audio.Year</span> | <span>@audio.Duration</span></small></p>
                        </div>
                    }
                }
            </div>

        </div>
    </div>

</section>


<!-- Hide some elements of header-->
<style>
    .detail-header__info-btn,
    .text-rating {
        display: none !important;
    }
</style>