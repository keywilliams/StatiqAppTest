@model LayoutModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Title</title>
    <meta name="description" content="@Model.MetaDescription">
    <meta name="og:title" property="og:title" content="@Model.OgTitle">
    <meta name="robots" content="@Model.Robots">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../wwwroot/css/bootstrap/bootstrap.min.css" />

    <!-- Slick Slider CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="../wwwroot/css/site.css" />
</head>
<body>
    <div class="page">
        <main>
            <div class="navmenu">
                @Html.Partial("NavMenu.cshtml", Model)
            </div>

            <article class="content p-0" style="min-height: 100vh;">
                @RenderBody()
            </article>

            <div class="footer">
                @Html.Partial("Footer.cshtml", Model)
            </div>
        </main>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js" type="text/javascript"></script>

    <!-- Slick Slider -->
    <script src="../wwwroot/js/slick.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

    <!-- Site JS -->
    <script src="../wwwroot/js/site.js" type="text/javascript" asp-append-version="true" defer></script>
    <script src="../wwwroot/js/script.js" type="text/javascript"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>