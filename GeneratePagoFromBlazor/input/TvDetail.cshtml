@model TvDetailModel
@Html.Partial("Shared/DetailHeader.cshtml", Model)

<section class="item-details">

    <div class="item-details__info">
        <div class="mb-4">
            <h6>@Model.Resources.TextOverview</h6>
            <p>@Model.Description</p>
        </div>

        <div class="mb-4">
            <h6>@Model.Resources.TextCredits</h6>
            <div class="d-flex">
                <div class="item-details__subtitle">
                    <p>@Model.Resources.TextDirector</p>
                    <p>@Model.Resources.TextCast</p>
                </div>
                <div class="item-details__description">
                    <p>@Model.Director</p>
                    <p>@Model.Cast</p>
                </div>
            </div>
        </div>

        <div class="mb-4">
            <h6>@Model.Resources.TextInformation</h6>
            <div class="d-flex">
                <div class="item-details__subtitle">
                    <p>@Model.Resources.TextStudio</p>
                    <p>@Model.Resources.TextGenre</p>
                    <p>@Model.Resources.TextReleased</p>
                    <p>@Model.Resources.TextCopyright</p>
                </div>
                <div class="item-details__description">
                    <p>@Model.Studio</p>
                    <p>@Model.Genre</p>
                    <p>@Model.Released</p>
                    <p>@Model.Copyright©</p>
                </div>
            </div>
        </div>
    </div>

</section>
<section class="audio-track bg-dark py-5 mb-5">
    <div class="item-all__content">
        <h6>@Model.Resources.TextEpisodes</h6>
        <div class="content-slider">
            SLIDER
        </div>
    </div>

</section>

<div class="item-all__content content-light mb-4">
    <h6>@Model.Resources.TextRelated</h6>

    <div class="row row-cols-lg-5 ">
        @{
            foreach (var relate in Model.Related)
            {
                <div class="col col-4">

                    <a href="@{@relate.HtmlName}.html">
                        <div class="search-results__item">
                            <img src="@relate.Image" />
                            <div class="search-results__item-type">
                                <svg class="all fill-white">
                                    <use xlink:href="../wwwroot/all.svg#icon-tv"></use>
                                </svg>
                            </div>
                        </div>

                    </a>

                    <p class="search-results__item-title mb-0 mt-3">@relate.Name<span></span></p>
                    <p class="search-results__item-info"><span>@relate.Year</span> | <span>@relate.Duration</span></p>

                </div>
            }
        }
    </div>
</div>

<section class="item-all bg-dark py-5 mb-5">
    <div class="item-all__content">
        <h6>@Model.Resources.TextAllSeries</h6>

        <div class="content-slider">
            SLIDER
        </div>
    </div>

</section>