@model FAQsViewModel
<div>
    @{
        foreach (var faq in Model.FAQs)
        {
            <section>
                <section class="item-details">
                    <div class="item-details__info">
                        <div class="mb-4">
                            <h6>@Model.Resources.FAQTitle</h6>
                            <p>@Model.Resources.FAQSubtitle</p>
                        </div>

                    </div>
                </section>
                <section class="audio-track bg-dark py-5 mb-5">
                    <div class="item-all__content">
                        <div class="content-table">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th scope="col">@Model.Resources.TextQuestion</th>
                                        <th scope="col">@Model.Resources.TextAnswer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (faq.FAQItems != null && faq.FAQItems.Any())
                                    {
                                        @foreach (var item in faq.FAQItems.OrderBy(x => x.Order))
                                        {
                                            <tr>
                                                <td>@item.Question</td>
                                                <td>@item.Answer</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            </section>
        }
    }
</div>

<style>
    .navbar {
        background-color: #041C2C;
    }
</style>