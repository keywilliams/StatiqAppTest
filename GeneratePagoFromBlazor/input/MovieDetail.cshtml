@model MovieDetailModel
@Html.Partial("Shared/DetailHeader.cshtml", Model)

<section class="item-details">

    <div class="item-details__info">
        <div class="mb-4">
            <h6>Overview</h6>
            <p>@Model.Description</p>
        </div>

        <div class="mb-4">
            <h6>Credits</h6>
            <div class="d-flex">
                <div class="item-details__subtitle">
                    <p>Director</p>
                    <p>Cast</p>
                </div>
                <div class="item-details__description">
                    <p>@Model.Director</p>
                    <p>@Model.Cast</p>
                </div>
            </div>
        </div>

        <div class="mb-4">
            <h6>Information</h6>
            <div class="d-flex">
                <div class="item-details__subtitle">
                    <p>Studio</p>
                    <p>Genre</p>
                    <p>Released</p>
                    <p>Copyright</p>
                </div>
                <div class="item-details__description">
                    <p>@Model.Studio</p>
                    <p>@Model.Genre</p>
                    <p>@Model.Released</p>
                    <p>@Model.Copyright©</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <h6>Related</h6>

        <div class="row row-cols-lg-5 ">
            @{
                foreach (var relate in Model.Related)
                {
                    <div class="col col-4">

                        <a href="@{@relate.HtmlName}.html">
                            <div class="search-results__item">
                                <img src="@relate.Image" />
                                <div class="search-results__item-type">
                                    <svg class="all fill-white">
                                        <use xlink:href="../wwwroot/all.svg#icon-movie"></use>
                                    </svg>
                                </div>
                            </div>

                        </a>

                        <p class="search-results__item-title mb-0 mt-3">@relate.Name<span></span></p>
                        <p class="search-results__item-info"><span>@relate.Year</span> | <span>@relate.Duration</span></p>

                    </div>
                }
            }
        </div>
    </div>

</section>

<section class="item-all bg-dark py-5 mb-5">
    <div class="item-all__content">
        <h6>All Movies</h6>

        <div class="content-slider">
            SLIDER
        </div>
    </div>

</section>